<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/activity_main" />

    <android.support.design.widget.NavigationView
        android:id="@+id/drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/offer_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:text="Best Offers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|start"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/offer_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:text="Awesome Offers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|start"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/offer_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:text="Offers Chest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|start"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/offer_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:text="Best Video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|start"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/offer_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:text="Fantastic Video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|start"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/offer_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:text="Beautiful Video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|start"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/offer_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:text="Brilliant Video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|start"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:id="@+id/offer_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:text="Cool Video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|start"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>